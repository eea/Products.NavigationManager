<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      i18n:domain="plone">

<body>

  <metal:block define-macro="sectionsMenu"
               tal:define="view here/@@sectionsForContentNavigationMenu;
	                   sections view/menu"
               tal:condition="view/display">

      <ul>
        <li>
          <dl class="actionMenu" id="navSectionMenu">
            <dt class="actionMenuHeader">
                <a href="#"
                   ><span i18n:translate="label_navigation">Navigation</span></a>
            </dt>
            <dd class="actionMenuContent">
              <ul>
                  <tal:block tal:repeat="section sections">
		    <tal:defines  tal:define="separator python:section['id'] == 'separator'">
		    <li class="actionSeparator"
		      tal:content="section/title"
		      tal:condition="separator">
		      Section separator
   		     </li>
                  <li tal:define="section_id section/id;
                                  section_title section/title;
				  current section/current"
		      tal:condition="not: separator">
                    <a href="#" tal:condition="not: current"
                       tal:attributes="href string:$here_url/@@setNavigationSection?section=$section_id">
                      <span tal:replace="section_title">Section name</span>
                    </a>
                     <span tal:attributes="class python:test(current, 'actionMenuSelected', '')" style="white-space: nowrap;"
		           tal:content="section_title"
			   tal:condition="current">Section title</span>
                  </li>
                  </tal:defines>
                </tal:block>
        <li tal:condition="python:member.has_role('Manager')" class="actionSeparator">
           <a href="#" class=""
              tal:attributes="href string:$navigation_root_url/manage_propertiesForm"
              i18n:translate="header_manage_navigation_sections">Manage sections</a>
        </li>

              </ul>
            </dd>
          </dl>
        </li>
      </ul>

  </metal:block>
</body>
</html>
