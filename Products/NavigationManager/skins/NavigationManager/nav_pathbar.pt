<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en" lang="en"
      i18n:domain="plone">
<body>
<div metal:define-macro="base_pathbar"
       i18n:domain="plone"
       tal:omit-tag=""
       tal:define="site	 options/site|request/site|here/navigationmanager_site|string:default;
       menuid options/menuid|request/menuid|here/navigationmanager_menuid|string:;
       relativeurls options/relativeurls|string:no;
       view context/@@eea_menu;
       isRTL python:False;
       portal_url python:here.portal_url();">
 <tal:block define="breadcrumbs python:view.getPath(site, menuid)">

    <span tal:condition="view/isRoot">
        &nbsp;
    </span>

    <span tal:condition="not: view/isRoot"
          tal:repeat="crumb breadcrumbs"
          tal:attributes="dir python:test(isRTL, 'rtl', 'ltr')">

        <tal:crumbs tal:define="is_last repeat/crumb/end;
                                is_first repeat/crumb/start">
            <a class="breadcrumbitem" href="#"
               tal:condition="python:crumb['id']!=view.getSiteRootId()"
               tal:omit-tag="not: crumb/url"
               tal:attributes="href python:view.getItemUrl(crumb['url'],relativeurls)"
               tal:content="crumb/title">
                crumb
            </a> 
        </tal:crumbs>
    </span>  
</tal:block>
</div>

<div metal:define-macro="tail_pathbar"
     tal:omit-tag=""
     tal:define="isDefault python: plone_view.isDefaultPageInFolder();
                 view context/@@eea_menu;
		 menuid options/menuid|request/menuid|here/navigationmanager_menuid|string:;">

    <span tal:condition="python: not view.isRoot() and not isDefault or menuid"
          tal:attributes="dir python:test(isRTL, 'rtl', 'ltr')">
        <span tal:content="here/Title" class="breadcrumbitemlast">
            crumb
        </span>
     </span>
</div>

</body>
</html>
